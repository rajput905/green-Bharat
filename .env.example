# GreenFlow AI — Environment Configuration
# Copy this file to .env and fill in the values
# NEVER commit your .env file to version control!

# ────────────────────────────────────────────────────────────────
# REQUIRED - Application will NOT start without these
# ────────────────────────────────────────────────────────────────

# OpenAI API key for GPT-4o RAG engine
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# Secret key for signing tokens (use a 32+ char random string)
# Generate one: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-very-long-secret-key-here-change-me

# ────────────────────────────────────────────────────────────────
# APPLICATION SETTINGS
# ────────────────────────────────────────────────────────────────

APP_NAME=GreenFlow AI
APP_ENV=development         # development | production
APP_DEBUG=true              # Set to false in production
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO              # DEBUG | INFO | WARNING | ERROR

# ────────────────────────────────────────────────────────────────
# DATABASE
# ────────────────────────────────────────────────────────────────

# Development (SQLite - default, no setup required)
DATABASE_URL=sqlite+aiosqlite:///./data/greenflow_dev.db

# Production (PostgreSQL - recommended)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/greenflow

# ────────────────────────────────────────────────────────────────
# CORS (comma-separated list of allowed origins)
# ────────────────────────────────────────────────────────────────

ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# ────────────────────────────────────────────────────────────────
# PATHWAY STREAMING
# ────────────────────────────────────────────────────────────────

# License key for Pathway (leave empty to use open-source tier)
PATHWAY_LICENSE_KEY=

# Directory to watch for incoming JSONL files
DATA_WATCH_DIR=./data/watch

# ────────────────────────────────────────────────────────────────
# OPTIONAL INTEGRATIONS
# ────────────────────────────────────────────────────────────────

# Kafka (optional - for enterprise streaming)
KAFKA_BROKER=localhost:9092
KAFKA_TOPIC=greenflow-events

# External API Keys (optional - for live data)
# WEATHER_API_KEY=your-openweathermap-key
# AQI_API_KEY=your-iqair-key
