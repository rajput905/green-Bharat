# ─────────────────────────────────────────────────────────────
# GreenFlow AI  –  Environment Variables
# Copy this file to ".env" and fill in your real values.
# NEVER commit the actual ".env" file to version control.
# ─────────────────────────────────────────────────────────────

# ── Application ───────────────────────────────────────────────
APP_NAME=GreenFlow AI
APP_ENV=development            # development | staging | production
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000
SECRET_KEY=your_secret_key_here_change_in_production

# ── OpenAI / LLM ─────────────────────────────────────────────
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7

# ── HuggingFace (optional – for local embeddings) ─────────────
HUGGINGFACE_API_KEY=hf_your_hf_key_here

# ── Database – PostgreSQL ────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/greenflow
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ── Redis (caching / pub-sub) ────────────────────────────────
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=3600

# ── ChromaDB (vector store) ──────────────────────────────────
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_COLLECTION=greenflow_vectors

# ── Pathway Pipeline ─────────────────────────────────────────
PATHWAY_HOST=0.0.0.0
PATHWAY_PORT=8080
PATHWAY_LICENSE_KEY=            # leave blank for open-source tier

# ── Ingestion Sources ────────────────────────────────────────
KAFKA_BROKER=localhost:9092
KAFKA_TOPIC=greenflow.events
KAFKA_GROUP_ID=greenflow-consumer

DATA_WATCH_DIR=./data/watch     # local folder Pathway watches

# ── Logging ──────────────────────────────────────────────────
LOG_LEVEL=INFO                  # DEBUG | INFO | WARNING | ERROR
LOG_FILE=logs/greenflow.log
LOG_ROTATION=10 MB
LOG_RETENTION=7 days

# ── CORS ─────────────────────────────────────────────────────
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ── Prometheus / Metrics ─────────────────────────────────────
ENABLE_METRICS=true
METRICS_PORT=9090
